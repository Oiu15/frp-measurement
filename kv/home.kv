<HomeScreen>:
    name: "home"
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "FRP Pipe - Home"
            left_action_items: [["menu", lambda x: None]]
            right_action_items: [["cog", lambda x: setattr(app.root, "current", "settings")], ["book-open-variant", lambda x: setattr(app.root, "current", "manual")], ["file-chart", lambda x: setattr(app.root, "current", "result")]]

        MDBoxLayout:
            orientation: "vertical"
            padding: "16dp"
            spacing: "16dp"

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "16dp"
                size_hint_y: 0.5

                MDCard:
                    orientation: "vertical"
                    padding: "16dp"
                    size_hint_x: 0.5
                    MDGridLayout:
                        cols: 3
                        rows: 2
                        spacing: "12dp"
                        adaptive_height: True
                        adaptive_width: True
                        size_hint: 1, 1

                        ResultCard:
                            title: "Length"
                            value: "123.4"
                            unit: "mm"
                        ResultCard:
                            title: "OD"
                            value: "100.0"
                            unit: "mm"
                        ResultCard:
                            title: "ID"
                            value: "95.0"
                            unit: "mm"
                        ResultCard:
                            title: "Roundness"
                            value: "0.20"
                            unit: "mm"
                        ResultCard:
                            title: "Straightness"
                            value: "0.15"
                            unit: "mm/m"
                        ResultCard:
                            title: "Concentricity"
                            value: "0.10"
                            unit: "mm"

                MDCard:
                    orientation: "vertical"
                    padding: "16dp"
                    size_hint_x: 0.5
                    MDLabel:
                        text: "Peripheral Status"
                        halign: "center"
                        valign: "center"

            MDBoxLayout:
                orientation: "horizontal"
                spacing: "16dp"
                size_hint_y: 0.5

                MDCard:
                    orientation: "vertical"
                    padding: "16dp"
                    size_hint_x: 0.5
                    MDLabel:
                        text: "Runtime Info"
                        halign: "center"
                        valign: "center"

                MDCard:
                    orientation: "vertical"
                    padding: "16dp"
                    size_hint_x: 0.5
                    MDBoxLayout:
                        orientation: "vertical"
                        spacing: "12dp"
                        MDLabel:
                            text: "Process Info"
                            halign: "center"
                        MDLabel:
                            text: "Status Button"
                            halign: "center"
                        MDFloatingActionButton:
                            icon: "power"
                            md_bg_color: "#607d8b"
                            size: "84dp", "84dp"
                            elevation_normal: 8
                            pos_hint: {"center_x": 0.5}
